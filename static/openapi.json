{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Test API",
    "description": "An API"
  },
  "paths": {
    "/api/OpenCustomerAccount": {
      "post": {
        "summary": "Creates a new user.",
        "requestBody": {
          "description": "Creates accounts for customer with first and last names",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "firstName",
                  "lastName"
                ],
                "properties": {
                  "firstName": {
                    "type": "string"
                  },
                  "lastName": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully created account for customer",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "value": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer",
                          "example": 1
                        },
                        "firstName": {
                          "type": "string",
                          "example": "John"
                        },
                        "lastName": {
                          "type": "string",
                          "example": "Smith"
                        },
                        "account": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "integer",
                              "example": 1
                            },
                            "accountNumber": {
                              "type": "string",
                              "example": "340fe77f-b9d2-46cb-9365-2e8db15a4924"
                            },
                            "balance": {
                              "type": "integer",
                              "example": 0
                            },
                            "status": {
                              "type": "integer",
                              "example": 0,
                              "description": "0 is open, 1 is closed"
                            }
                          }
                        },
                        "statusCode": {
                          "type": "integer",
                          "example": 200
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Missing first or last name",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": {
                      "type": "integer",
                      "example": 400
                    },
                    "description": {
                      "type": "string",
                      "example": "Invalid input of first or last name"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/CustomerDetails": {
      "get": {
        "tags": [
          "Customer Details"
        ],
        "description": "Returns details about the customer",
        "parameters": [
          {
            "in": "query",
            "name": "accnumber",
            "required": true,
            "description": "Associated Account Number",
            "schema": {
              "type": "string",
              "example": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Customer Information",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "John Smith - Associated Account #1991919"
                }
              }
            }
          }
        }
      }
    }
  }
}